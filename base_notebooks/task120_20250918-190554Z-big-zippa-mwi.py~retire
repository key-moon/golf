def p(j):
	F=range;G=len;L=[A[:]for A in j];H=set()
	for A in F(G(j)):
		for B in F(G(j[0])):
			if j[A][B]and(A,B)not in H:
				E,I=[(A,B)],[(A,B)];H.add((A,B));M=j[A][B]
				while I:
					J,K=I.pop()
					for(N,O)in[(0,1),(1,0),(0,-1),(-1,0)]:
						C,D=J+N,K+O
						if 0<=C<G(j)and 0<=D<G(j[0])and j[C][D]==M and(C,D)not in H:H.add((C,D));E.append((C,D));I.append((C,D))
				P=min(A[0]for A in E);Q=max(A[0]for A in E);R=min(A[1]for A in E);S=max(A[1]for A in E)
				for J in F(P+1,Q):
					for K in F(R+1,S):L[J][K]=8
	return L